{
    "name": "9gag-open-source/fastly",
    "license": "MIT",
    "type": "Library",
    "description": "Provides a PHP client for the Fastly API",
    "authors": [
        {
            "name": "Gonzalo Vilaseca",
            "email": "gonzalo.vilaseca@reiss.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/fastly/fastly-php/issues",
        "source": "https://github.com/fastly/fastly-php"
    },
    "require": {
        "php": "^5.5 || ^7.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.5.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Guzzle 6.2+ is required to use GuzzleAdapter"
    },
    "autoload": {
        "psr-4": {
            "Fastly\\": "src/"
        }
    }
}
